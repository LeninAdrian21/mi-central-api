{
  "routes": [
    {
      "method": "GET",
      "path": "/locals",
      "handler": "local.find",
      "config": {
        "policies": ["global::permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/locals/count",
      "handler": "local.count",
      "config": {
        "policies": ["global::permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/locals/:id",
      "handler": "local.findOne",
      "config": {
        "policies": ["global::permissions"]
      }
    },
    {
      "method": "POST",
      "path": "/locals",
      "handler": "local.create",
      "config": {
        "policies": ["global::permissions"]
      }
    },
    {
      "method": "PUT",
      "path": "/locals/:id",
      "handler": "local.update",
      "config": {
        "policies": ["global::permissions"]
      }
    },
    {
      "method": "DELETE",
      "path": "/locals/:id",
      "handler": "local.delete",
      "config": {
        "policies": ["global::permissions"]
      }
    }
  ]
}
