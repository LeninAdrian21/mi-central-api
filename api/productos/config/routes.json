{
  "routes": [
    {
      "method": "GET",
      "path": "/productos",
      "handler": "productos.find",
      "config": {
        "policies": ["global::permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/productos/count",
      "handler": "productos.count",
      "config": {
        "policies": ["global::permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/productos/:id",
      "handler": "productos.findOne",
      "config": {
        "policies": ["global::permissions"]
      }
    },
    {
      "method": "POST",
      "path": "/productos",
      "handler": "productos.create",
      "config": {
        "policies": ["global::permissions"]
      }
    },
    {
      "method": "PUT",
      "path": "/productos/:id",
      "handler": "productos.update",
      "config": {
        "policies": ["global::permissions"]
      }
    },
    {
      "method": "DELETE",
      "path": "/productos/:id",
      "handler": "productos.delete",
      "config": {
        "policies": ["global::permissions"]
      }
    }
  ]
}
